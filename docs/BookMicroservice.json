              "application/protobuf.BasicMessage": {
                "schema": {
                  "$ref": "#/components/schemas/BasicMessage"
                },
                "examples": {
                  "messageReturn": {
                    "summary": "Return data",
                    "value": {
                      "message": "Cannot add RFID."
                    }
